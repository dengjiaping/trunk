<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <RelativeLayout
        android:id="@+id/top_item"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/chat_top_item"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="成功创建群组" />
    </RelativeLayout>
    <!--左边-->
    <LinearLayout
        android:id="@+id/leftitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_long"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/leftitem_headimage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="10dp"
            android:src="@mipmap/per_def" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/leftchat_person"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="毛利的家长："
                android:textColor="@color/text_gray_h2"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/leftchat_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_text_white"
                android:padding="10dp"
                android:text="你要好好听话哦"
                android:textColor="@color/text_black_h1"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

    <!--右边-->
    <RelativeLayout
        android:id="@+id/rightitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_long"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/rightitem_headimage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:src="@mipmap/per_def" />

        <TextView
            android:id="@+id/rightchat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@id/rightitem_headimage"
            android:background="@drawable/chat_text_blue"
            android:padding="10dp"
            android:text="你要好好听话哦"
            android:textColor="@color/text_white"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>