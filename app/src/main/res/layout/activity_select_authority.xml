<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_color"
              android:orientation="vertical">

    <include layout="@layout/thetopview_new"/>
    <View style="@style/split_line_style_10dp"></View>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/white"
                  android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/all_public"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp70"
            android:background="@color/white"
            android:onClick="onClick"
            android:paddingRight="@dimen/dp15">
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="match_parent"

                          android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1.7"
                    android:gravity="center_vertical"
                    android:text="公开"
                    android:textColor="@color/text_black_h1"
                    android:textSize="@dimen/text_size_14"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:text="对所有人可见"
                    android:textColor="@color/text_gray_h1"
                    android:textSize="@dimen/text_size_12"/>
            </LinearLayout>

            <com.histudent.jwsoft.histudent.commen.view.swipemenulistview.CheckBoxView
                android:id="@+id/iv_all_public"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="@string/icon_radio"
                android:textSize="@dimen/text_size_18"
            />
        </RelativeLayout>

        <View style="@style/split_line_style_withLeftMargin"></View>

        <RelativeLayout
            android:id="@+id/member_public"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp70"
            android:background="@color/white"
            android:onClick="onClick"
            android:paddingRight="@dimen/dp15">
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="match_parent"

                          android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_instr"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1.7"
                    android:gravity="center_vertical"
                    android:text="成员可见"
                    android:textColor="@color/text_black_h1"
                    android:textSize="@dimen/text_size_14"/>
                <TextView
                    android:id="@+id/tv_instr01"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:text="对班级同学和老师可见"
                    android:textColor="@color/text_gray_h1"
                    android:textSize="@dimen/text_size_12"/>
            </LinearLayout>

            <com.histudent.jwsoft.histudent.commen.view.swipemenulistview.CheckBoxView
                android:id="@+id/iv_member_public"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="@string/icon_radio"
                android:textSize="@dimen/text_size_18"
            />
        </RelativeLayout>

        <View style="@style/split_line_style_withLeftMargin"></View>

        <RelativeLayout
            android:id="@+id/myself_public"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp70"
            android:background="@color/white"
            android:onClick="onClick"
            android:paddingRight="@dimen/dp15">

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="match_parent"

                          android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1.7"
                    android:gravity="center_vertical"
                    android:text="私密"
                    android:textColor="@color/text_black_h1"
                    android:textSize="@dimen/text_size_14"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:text="仅自己可见"
                    android:textColor="@color/text_gray_h1"
                    android:textSize="@dimen/text_size_12"/>
            </LinearLayout>

            <com.histudent.jwsoft.histudent.commen.view.swipemenulistview.CheckBoxView
                android:id="@+id/iv_myself_public"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="@string/icon_radio"
                android:textSize="@dimen/text_size_18"
            />

        </RelativeLayout>
        <View style="@style/split_line_style_withLeftMargin"></View>


    </LinearLayout>

</LinearLayout>
