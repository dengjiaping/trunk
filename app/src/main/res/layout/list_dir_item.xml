<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
    >

    <!--//  android:background="@mipmap/pic_dir"-->
    <ImageView
        android:id="@+id/id_dir_item_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/dp10"
        android:scaleType="centerCrop"
        android:src="@drawable/default_placeholder_style_1"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_margin="@dimen/dp10"
        android:layout_toRightOf="@id/id_dir_item_image">

        <TextView
            android:id="@+id/id_dir_item_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:textColor="@color/text_gray_h1"
            android:textSize="@dimen/text_size_13"/>

        <TextView
            android:id="@+id/id_dir_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:textColor="@color/text_black_h1"
            android:textSize="@dimen/text_size_15"/>


    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:src="@mipmap/mine_more_right"/>

    <View
        style="@style/split_line_style_withLeftMargin"
        android:layout_alignParentBottom="true"></View>

</RelativeLayout>