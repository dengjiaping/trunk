<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/srl_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_recycler_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <View
        android:id="@+id/view_home_status_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp22"
        android:alpha="0"
        android:background="@color/textBar_color"/>

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:layout_marginTop="@dimen/dp22"
        android:alpha="0"
        android:background="@color/white"
        app:layout_behavior="com.histudent.jwsoft.histudent.view.fragment.main.TranslucentBehavior">
        <!--android:background="@drawable/tool_bar_bg"-->

        <RelativeLayout
            android:id="@+id/rl_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/home"
                android:textColor="@color/text_black_h2"
                android:textSize="@dimen/text_size_16"/>

            <com.histudent.jwsoft.histudent.commen.view.IconView
                android:id="@+id/icon_search"
                android:layout_width="@dimen/dp20"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp20"
                android:gravity="center"
                android:text="@string/icon_search"
                android:textColor="@color/text_black_h2"
                android:textSize="@dimen/sp17"/>
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

</android.support.design.widget.CoordinatorLayout>