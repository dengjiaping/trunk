<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/text_white"
        android:orientation="vertical">

        <!--原密码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/itemHight"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp25"
            android:paddingRight="@dimen/dp25">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="原密码"
                android:textColor="@color/text_gray_h2"
                android:textSize="@dimen/textSize" />

            <EditText
                android:id="@+id/accountSafe_pswSet_fragment_02_account"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/itemMargin"
                android:layout_weight="3"
                android:background="@null"
                android:digits="@string/edit_limit"
                android:hint="输入原密码"
                android:inputType="textPassword"
                android:textColor="@color/text_gray_h2"
                android:textColorHint="@color/text_gray_h1"
                android:textSize="@dimen/textSize" />

        </LinearLayout>

        <View style="@style/split_line_style_withMargin" />

        <!--新密码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/itemHight"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp25"
            android:paddingRight="@dimen/dp25">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="新密码"
                android:textColor="@color/text_gray_h2"
                android:textSize="@dimen/textSize" />

            <EditText
                android:id="@+id/accountSafe_pswSet_fragment_01_newPsw"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/itemMargin"
                android:layout_weight="3"
                android:background="@null"
                android:digits="@string/edit_limit"
                android:hint="输入新密码"
                android:inputType="textPassword"
                android:textColor="@color/text_gray_h2"
                android:textColorHint="@color/text_gray_h1"
                android:textSize="@dimen/textSize" />

        </LinearLayout>

        <View style="@style/split_line_style_withMargin" />

        <!--确认密码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/itemHight"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp25"
            android:paddingRight="@dimen/dp25">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="确认密码"
                android:textColor="@color/text_gray_h2"
                android:textSize="@dimen/textSize" />

            <EditText
                android:id="@+id/accountSafe_pswSet_fragment_01_psw"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/itemMargin"
                android:layout_weight="3"
                android:background="@null"
                android:digits="@string/edit_limit"
                android:hint="再次输入新密码"
                android:inputType="textPassword"
                android:textColor="@color/text_gray_h2"
                android:textColorHint="@color/text_gray_h1"
                android:textSize="@dimen/textSize" />

        </LinearLayout>

        <View style="@style/split_line_style_withMargin" />

    </LinearLayout>

    <!--提 交-->
    <TextView
        android:id="@+id/commit"
        style="@style/long_blue_button"
        android:layout_centerVertical="true"
        android:layout_marginTop="36dp"
        android:background="@drawable/gray_button_bg"
        android:text="提 交" />

</LinearLayout>