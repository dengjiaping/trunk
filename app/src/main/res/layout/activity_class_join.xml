<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/thetopview_new"/>

        <EditText
            android:id="@+id/assignment_edit"
            style="@style/text_gray_v2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/gray_button_bg_"
            android:digits="@string/edit_limit_joinClass"
            android:hint="班级代码/班主任手机号"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:textColorHint="@color/text_gray_h1"
            android:textSize="@dimen/textSize"/>

        <TextView
            android:id="@+id/assignment_button"
            style="@style/text_white_v2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/dp30"
            android:layout_marginRight="@dimen/dp30"
            android:layout_marginTop="30dp"
            android:background="@drawable/join_class_shape"
            android:gravity="center"
            android:onClick="onClick"
            android:text="立即加入"
            android:textSize="@dimen/large_textSize"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.histudent.jwsoft.histudent.commen.view.IconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/dp5"
                    android:paddingRight="@dimen/dp5"
                    android:text="@string/icon_why"
                    android:textColor="@color/icon_color"
                    android:visibility="gone"
                    android:textSize="@dimen/text_size_14"/>

                <TextView
                    style="@style/text_back_v2_"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="如何获取班级代码？"
                    android:textSize="@dimen/text_size_13"/>

            </LinearLayout>


            <TextView
                style="@style/IntroductionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="1、通过班主任分享到微信、QQ中的邀请信息可以获得班级的代码。"
                android:textColor="@color/text_gray_h1"
                android:textSize="@dimen/text_size_12"/>

            <TextView
                style="@style/IntroductionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="2、通过已加入班级的其它老师或家长分享在微信、QQ中的信息可以获得班级代码。"
                android:textColor="@color/text_gray_h1"
                android:textSize="@dimen/text_size_12"/>

        </LinearLayout>

    </LinearLayout>

    <!--<FrameLayout-->
    <!--android:id="@+id/frame"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:background="@color/color_gray_alpha40"-->
    <!--android:visibility="gone" />-->

</RelativeLayout>