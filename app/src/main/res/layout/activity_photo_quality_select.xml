<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_color"
              android:orientation="vertical">

    <include layout="@layout/thetopview_new"/>

    <View style="@style/split_line_style_10dp"></View>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/white"
                  android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/relative_normal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp70"
            android:background="@color/white"
            android:paddingRight="@dimen/dp15">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="正常"
                    android:textColor="@color/text_black_h1"
                    android:textSize="@dimen/textSize"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="流量消耗较小，推荐使用"
                    android:textColor="@color/text_gray_h2"
                    android:textSize="13sp"/>
            </LinearLayout>


            <com.histudent.jwsoft.histudent.commen.view.swipemenulistview.CheckBoxView
                android:id="@+id/iv_normal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="@string/icon_radio"
                android:textSize="@dimen/text_size_18"
            />
        </RelativeLayout>

        <View style="@style/split_line_style_withMargin"/>

        <RelativeLayout
            android:id="@+id/relative_high"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp70"
            android:background="@color/white"
            android:paddingRight="@dimen/dp15">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="高清"
                        android:textColor="@color/text_black_h1"
                        android:textSize="@dimen/textSize"/>

                    <com.histudent.jwsoft.histudent.commen.view.IconView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/tv"
                        android:button="@null"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="@string/icon_hd"
                        android:textColor="@color/yellow_bg"
                        android:textSize="@dimen/text_size_18">
                    </com.histudent.jwsoft.histudent.commen.view.IconView>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="照片质量高，上传较慢"
                    android:textColor="@color/text_gray_h2"
                    android:textSize="13sp"/>
            </LinearLayout>


            <com.histudent.jwsoft.histudent.commen.view.swipemenulistview.CheckBoxView
                android:id="@+id/iv_high"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="@string/icon_radio"
                android:textSize="@dimen/text_size_18"
            />

        </RelativeLayout>

        <View style="@style/split_line_style_withMargin"></View>

        <RelativeLayout
            android:id="@+id/relative_original"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp70"
            android:background="@color/white"
            android:paddingRight="@dimen/dp15">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="0dp"
                              android:layout_weight="1"
                              android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="原图"
                        android:textColor="@color/text_black_h1"
                        android:textSize="@dimen/textSize"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="50M"
                        android:textColor="@color/yellow_bg"
                        android:textSize="@dimen/textSize"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="上传速度慢，非Wi-Fi不建议使用"
                    android:textColor="@color/text_gray_h2"
                    android:textSize="13sp"/>
            </LinearLayout>


            <com.histudent.jwsoft.histudent.commen.view.swipemenulistview.CheckBoxView
                android:id="@+id/iv_original"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="@string/icon_radio"
                android:textSize="@dimen/text_size_18"
            />

        </RelativeLayout>

        <View style="@style/split_line_style_withMargin"></View>
    </LinearLayout>
</LinearLayout>
