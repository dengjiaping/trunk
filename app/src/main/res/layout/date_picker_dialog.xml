<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:minWidth="200dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="选择日期"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/button_clear"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:clickable="false"
                android:gravity="center"
                android:textColor="#71C9EA" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#71C9EA" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <com.histudent.jwsoft.histudent.commen.view.dateSelect.QNumberPicker
                android:id="@+id/numberPicker_year"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp" />


            <com.histudent.jwsoft.histudent.commen.view.dateSelect.QNumberPicker
                android:id="@+id/numberPicker_month"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp" />


            <com.histudent.jwsoft.histudent.commen.view.dateSelect.QNumberPicker
                android:id="@+id/numberPicker_day"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp" />


        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#71C9EA" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="取消" />

        <TextView
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
            android:background="#dcdcdc" />

        <Button
            android:id="@+id/button_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="确定" />
    </LinearLayout>

</LinearLayout>