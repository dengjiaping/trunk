<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_view"
    android:layout_width="@dimen/dp50"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/app_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp10"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/tv_notice_num"
        android:layout_width="@dimen/dp13"
        android:layout_height="@dimen/dp13"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp10"
        android:background="@drawable/dot_red"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_9"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_new_function"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@mipmap/icon_class_function_new"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_common_dot_function"
        android:layout_width="@dimen/dp8"
        android:layout_height="@dimen/dp8"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp12"
        android:layout_marginTop="@dimen/dp5"
        android:background="@drawable/dot_red"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/tv_common_num"
        android:layout_width="@dimen/dp13"
        android:layout_height="@dimen/dp13"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp10"
        android:background="@drawable/dot_red"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_9"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/tv_notice"
        android:layout_width="@dimen/dp8"
        android:layout_height="@dimen/dp8"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp12"
        android:layout_marginTop="@dimen/dp5"
        android:background="@drawable/dot_red"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_iv"
        android:gravity="center"
        android:paddingBottom="@dimen/dp5"
        android:paddingTop="@dimen/dp10"
        android:textColor="@color/text_black_h1"
        android:textSize="@dimen/sp11"/>

</RelativeLayout>