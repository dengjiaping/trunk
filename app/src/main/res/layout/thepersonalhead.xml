<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/themy_fragment_imageBg"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="@color/theMyFragment_bg">

    <RelativeLayout
        android:id="@+id/themy_fragment_layout"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@mipmap/themyfragment_circle"
        android:gravity="center">

        <!--头像-->
        <com.histudent.jwsoft.histudent.commen.view.HiStudentHeadImageView
            android:id="@+id/themy_fragment_portrait"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:onClick="onClick"
            android:src="@drawable/default_person" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/themy_fragment_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <!--姓名-->
        <TextView
            android:id="@+id/themy_fragment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/text_white"
            android:textSize="@dimen/large_textSize" />

        <ImageView
            android:id="@+id/themy_fragment_sex"
            android:layout_width="@dimen/dp15"
            android:layout_height="@dimen/dp15"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/themy_fragment_level"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/level_bg"
            android:gravity="center"
            android:textColor="@color/red"
            android:textSize="@dimen/small_textSize"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/name"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/themy_fragment_attention"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="关注 0"
            android:textColor="@color/text_white"
            android:textSize="@dimen/small_textSize" />

        <TextView
            android:id="@+id/line_01"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp5"
            android:layout_marginTop="@dimen/dp5"
            android:background="@color/white" />

        <TextView
            android:id="@+id/themy_fragment_fans"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center"
            android:text="粉丝 0"
            android:textColor="@color/text_white"
            android:textSize="@dimen/small_textSize" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp5"
            android:layout_marginTop="@dimen/dp5"
            android:background="@color/white" />

        <TextView
            android:id="@+id/themy_fragment_experience"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center"
            android:text="经验 0"
            android:textColor="@color/text_white"
            android:textSize="@dimen/small_textSize" />

        <TextView
            android:id="@+id/line_02"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp5"
            android:layout_marginTop="@dimen/dp5"
            android:background="@color/white" />

        <TextView
            android:id="@+id/themy_fragment_integral"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="积分 0"
            android:textColor="@color/text_white"
            android:textSize="@dimen/small_textSize" />

    </LinearLayout>

</RelativeLayout>