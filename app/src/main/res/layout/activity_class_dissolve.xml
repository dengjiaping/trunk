<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/thetopview_new"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.histudent.jwsoft.histudent.commen.view.IconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/dp5"
                android:paddingRight="@dimen/dp5"
                android:text="@string/icon_tip"
                android:textColor="@color/icon_color"
                android:textSize="@dimen/text_size_14"/>

            <TextView
                style="@style/text_back_v2_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="解散重要提示"
                android:textSize="@dimen/text_size_13"/>

        </LinearLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tip_00"
            style="@style/IntroductionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tip_01"
            style="@style/IntroductionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp7"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:layout_marginLeft="@dimen/dp30"
        android:layout_marginRight="@dimen/dp30"
        android:layout_marginTop="@dimen/dp30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gray_button_bg_gray_v2_"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_dissolve_text_1"
                style="@style/class_dissolve_text"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/icon_color"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_dissolve_text_2"
                style="@style/class_dissolve_text"/>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/icon_color"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_dissolve_text_3"
                style="@style/class_dissolve_text"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/icon_color"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_dissolve_text_4"
                style="@style/class_dissolve_text"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/icon_color"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_dissolve_text_5"
                style="@style/class_dissolve_text"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/icon_color"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_dissolve_text_6"
                style="@style/class_dissolve_text"/>


        </LinearLayout>


        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_input_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:cursorVisible="false"
            android:inputType="text"
            android:maxLength="6"
            android:textColor="@android:color/transparent"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/itemMargin_v2"
        android:layout_marginLeft="@dimen/dp30"
        android:layout_marginRight="@dimen/itemMargin_v2"
        android:layout_marginStart="@dimen/dp30"
        android:layout_marginTop="10dp">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tip_02"
            style="@style/text_back_v2_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textSize="@dimen/text_size_12"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/dissolve_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/green_button_bg_circle_"
            android:clickable="false"
            android:gravity="center"
            android:onClick="onClick"
            android:text="解散"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20"/>

    </RelativeLayout>

</LinearLayout>