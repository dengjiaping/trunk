<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp75"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_receive_select_class_check"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="@dimen/dp17">

            <com.histudent.jwsoft.histudent.commen.view.IconView
                android:id="@+id/iv_receive_select_class_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp12"
                android:text="@string/icon_check2"
                android:textColor="@color/_cccccc"
                android:textSize="@dimen/sp18"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_receive_select_class_icon"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:src="@color/blue_color"/>

        <TextView
            android:id="@+id/tv_receive_class_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:maxEms="14"
            android:text="业庙中心小学二年级3班"
            android:textColor="@color/_333333"
            android:textSize="@dimen/sp15"/>

        <LinearLayout
            android:id="@+id/ll_receive_class_expand"
            android:layout_width="@dimen/dp60"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:orientation="vertical">

            <com.histudent.jwsoft.histudent.commen.view.IconView
                android:id="@+id/iv_receive_class_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp12"
                android:text="@string/icon_down"
                android:textColor="@color/_bbbbbb"
                android:textSize="@dimen/sp10"/>

        </LinearLayout>

    </LinearLayout>


    <View
        android:id="@+id/view_head_group_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginLeft="@dimen/dp12"
        android:background="@color/_EEEEEE"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/ll_head_create_divide_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <com.histudent.jwsoft.histudent.commen.view.IconView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/icon_add"
            android:textColor="@color/_28ca7e"
            android:textSize="@dimen/sp15"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp3"
            android:text="创建分组"
            android:textColor="@color/_28ca7e"
            android:textSize="@dimen/sp15"/>
    </LinearLayout>

</LinearLayout>