<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<com.histudent.jwsoft.histudent.commen.view.CircleImageView
    android:id="@+id/group_details_list_item_iv_person"
    android:layout_marginLeft="10dp"
    android:layout_centerVertical="true"
    android:src="@mipmap/avatar_def"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/group_details_list_item_iv_person"
        android:text="张三"
        android:id="@+id/group_details_list_item_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/group_details_list_item_tv_name"
        android:id="@+id/group_details_list_item_iv_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RadioButton
        android:id="@+id/group_details_list_item_rb_article_num"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/group_details_list_item_iv_person"
        android:layout_marginTop="10dp"
        android:layout_below="@id/group_details_list_item_iv_sex"
        android:drawableLeft="@drawable/default_placeholder_style_1"
        android:text="12"
        android:button="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>
    <RadioButton
        android:id="@+id/group_details_list_item_rb_pic_num"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/group_details_list_item_rb_article_num"
        android:layout_marginTop="10dp"
        android:layout_below="@id/group_details_list_item_iv_sex"
        android:drawableLeft="@drawable/default_placeholder_style_1"
        android:text="12"
        android:button="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>
    <ImageView
        android:id="@+id/group_details_list_item_iv_delete"
        android:layout_marginTop="10dp"
        android:layout_below="@id/group_details_list_item_iv_sex"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/default_placeholder_style_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>