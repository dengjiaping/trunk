<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.histudent.jwsoft.histudent.commen.view.swipemenulistview.XCRoundRectImageView
            android:id="@+id/iv_log"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:scaleType="centerCrop"
            android:src="@mipmap/person_center_cover"/>

        <com.histudent.jwsoft.histudent.commen.view.IconView
            android:id="@+id/close"
            android:layout_width="@dimen/dp50"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.8"
            android:gravity="bottom|center_horizontal"
            android:text="@string/icon_close3"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_25"/>

    </LinearLayout>


</RelativeLayout>