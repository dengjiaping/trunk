<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/message_mine"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <com.histudent.jwsoft.histudent.commen.view.IconView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/blue_button_bg_cicle"
            android:gravity="center"
            android:text="@string/icon_at2"
            android:textColor="@color/white"
            android:textSize="21sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="我的"
            android:textColor="@color/text_black_h1"
            android:textSize="@dimen/textSize" />

        <TextView
            android:id="@+id/mine_red_point"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/red_button_bg_circle"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:text="159"
            android:textColor="@color/text_white"
            android:textSize="9sp"
            android:visibility="gone"/>

        <com.histudent.jwsoft.histudent.commen.view.IconView
            android:id="@+id/mine_goto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/icon_arrowright"
            android:textColor="@color/icon_color"
            android:textSize="12sp"/>


    </LinearLayout>

    <View style="@style/split_line_style_withMargin" />

    <LinearLayout
        android:id="@+id/message_comment"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <com.histudent.jwsoft.histudent.commen.view.IconView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/circle_orange_gb"
            android:gravity="center"
            android:text="@string/icon_comment2"
            android:textColor="@color/white"
            android:textSize="21sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="评论"
            android:textColor="@color/text_black_h1"
            android:textSize="@dimen/textSize" />

        <TextView
            android:id="@+id/comment_red_point"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/red_button_bg_circle"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:text="159"
            android:textColor="@color/text_white"
            android:textSize="9sp"
            android:visibility="gone"/>

        <com.histudent.jwsoft.histudent.commen.view.IconView
            android:id="@+id/comment_goto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/icon_arrowright"
            android:textColor="@color/icon_color"
            android:textSize="12sp"
             />


    </LinearLayout>

    <View style="@style/split_line_style_withMargin" />

    <LinearLayout
        android:id="@+id/message_praise"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <com.histudent.jwsoft.histudent.commen.view.IconView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/red_button_bg_circle"
            android:gravity="center"
            android:text="@string/icon_zan2"
            android:textColor="@color/white"
            android:textSize="21sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="赞"
            android:textColor="@color/text_black_h1"
            android:textSize="@dimen/textSize" />

        <TextView
            android:id="@+id/praise_red_point"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/red_button_bg_circle"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:text="159"
            android:textColor="@color/text_white"
            android:textSize="9sp"
            android:visibility="gone" />

        <com.histudent.jwsoft.histudent.commen.view.IconView
            android:id="@+id/praise_goto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/icon_arrowright"
            android:textColor="@color/icon_color"
            android:textSize="12sp" />


    </LinearLayout>

    <View style="@style/split_line_style_withMargin" />

    <LinearLayout
        android:id="@+id/message_system"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <com.histudent.jwsoft.histudent.commen.view.IconView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/green_button_bg_circle_"
            android:gravity="center"
            android:text="@string/icon_message"
            android:textColor="@color/white"
            android:textSize="21sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="系统消息"
            android:textColor="@color/text_black_h1"
            android:textSize="@dimen/textSize" />

        <View
            android:id="@+id/system_red_point"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:background="@drawable/bg_red_point"
            android:visibility="gone" />


    </LinearLayout>

    <View style="@style/split_line_style_10dp" />
</LinearLayout>