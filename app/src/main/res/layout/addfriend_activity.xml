<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/thetopview"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="90dp">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="10dp"
            android:src="@drawable/default_person"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/addfriend_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="昵称"
                android:textSize="17sp"
                android:gravity="center_vertical"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/addfriend_account"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="账号"
                android:textSize="17sp"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/addfriend_chat"
        android:layout_width="match_parent"
        android:background="@drawable/loginbutton_bg"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/text_white"
        android:onClick="onClick"
        android:text="聊天"
        android:textSize="18sp"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/addfriend_add"
        android:layout_width="match_parent"
        android:background="@drawable/loginbutton_bg"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:onClick="onClick"
        android:textColor="@color/text_white"
        android:text="添加好友"
        android:textSize="18sp"
        android:layout_height="50dp" />


</LinearLayout>