<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/thetopview_new" />

    <View style="@style/split_line_style_10dp" />

    <!--班级logo-->
    <RelativeLayout
        android:id="@+id/class_logo_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:onClick="onClick"
        android:paddingLeft="@dimen/itemMargin"
        android:paddingRight="@dimen/itemMargin">


        <TextView
            style="@style/text_back_v2_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="班级logo" />

        <ImageView
            android:id="@+id/class_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/mine_more_right" />

        <com.histudent.jwsoft.histudent.commen.view.HiStudentHeadImageView
            android:id="@+id/class_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toLeftOf="@id/class_more"
            android:layout_toStartOf="@id/class_more"
            android:background="@drawable/gray_button_bg_stroke"
            android:padding="8dp"
            android:src="@drawable/default_person" />

    </RelativeLayout>

    <View style="@style/split_line_style_10dp" />

    <!--学校-->
    <RelativeLayout
        android:id="@+id/school_name_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemHight"
        android:onClick="onClick"
        android:paddingLeft="@dimen/itemMargin"
        android:paddingRight="@dimen/itemMargin">

        <TextView
            android:id="@+id/school_name_00"
            style="@style/text_back_v2_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="学校" />

        <ImageView
            android:id="@+id/school_name_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/mine_more_right" />

        <TextView
            android:id="@+id/school_name"
            style="@style/text_gray_v2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/school_name_01"
            android:layout_toStartOf="@id/school_name_01"
            android:layout_toRightOf="@+id/school_name_00"
            android:layout_toEndOf="@+id/school_name_00"
            android:gravity="end"
            android:text="学校" />

    </RelativeLayout>

    <View style="@style/split_line_style_10dp" />

    <!--学段-->
    <RelativeLayout
        android:id="@+id/phase_name_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemHight"
        android:onClick="onClick"
        android:paddingLeft="@dimen/itemMargin"
        android:paddingRight="@dimen/itemMargin">

        <TextView
            android:id="@+id/phase_name_00"
            style="@style/text_back_v2_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="学段" />

        <ImageView
            android:id="@+id/phase_name_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/mine_more_right" />

        <TextView
            android:id="@+id/phase_name"
            style="@style/text_gray_v2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/phase_name_01"
            android:layout_toStartOf="@id/phase_name_01"
            android:layout_toRightOf="@+id/phase_name_00"
            android:layout_toEndOf="@+id/phase_name_00"
            android:gravity="end"
            android:text="学段" />

    </RelativeLayout>

    <View style="@style/split_line_style_withMargin" />

    <!--年级-->
    <RelativeLayout
        android:id="@+id/grade_name_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemHight"
        android:onClick="onClick"
        android:paddingLeft="@dimen/itemMargin"
        android:paddingRight="@dimen/itemMargin">

        <TextView
            android:id="@+id/grade_name_00"
            style="@style/text_back_v2_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="年级" />

        <ImageView
            android:id="@+id/grade_name_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/mine_more_right" />

        <TextView
            android:id="@+id/grade_name"
            style="@style/text_gray_v2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/grade_name_01"
            android:layout_toStartOf="@id/grade_name_01"
            android:layout_toRightOf="@+id/grade_name_00"
            android:layout_toEndOf="@+id/grade_name_00"
            android:gravity="end"
            android:text="年级" />

    </RelativeLayout>

    <View style="@style/split_line_style_withMargin" />

    <!--班次-->
    <RelativeLayout
        android:id="@+id/class_name_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemHight"
        android:onClick="onClick"
        android:paddingLeft="@dimen/itemMargin"
        android:paddingRight="@dimen/itemMargin">

        <TextView
            android:id="@+id/class_name_00"
            style="@style/text_back_v2_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="班次" />

        <ImageView
            android:id="@+id/class_name_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/mine_more_right" />

        <TextView
            android:id="@+id/class_name"
            style="@style/text_gray_v2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/class_name_01"
            android:layout_toStartOf="@id/class_name_01"
            android:layout_toRightOf="@+id/class_name_00"
            android:layout_toEndOf="@+id/class_name_00"
            android:gravity="end"
            android:text="班次" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color" />

</LinearLayout>