<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/thetopview_new" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@color/bg_color">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:src="@mipmap/hi_log" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="嗨同学"
                android:textColor="@color/text_black_h1"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="version : 1.0.1" />

        </RelativeLayout>

        <!--客服电话-->
        <RelativeLayout
            android:id="@+id/phone"
            style="@style/item_layout_style">

            <TextView
                style="@style/textInMyFragmentLeft"
                android:text="客服电话" />

            <TextView
                style="@style/textInMyFragmentLeft"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:text="@string/offical_phone" />

        </RelativeLayout>

        <View style="@style/split_line_style_withMargin" />

        <!--客户邮箱-->
        <RelativeLayout style="@style/item_layout_style">

            <TextView
                style="@style/textInMyFragmentLeft"
                android:text="客服邮箱" />

            <TextView
                style="@style/textInMyFragmentLeft"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:text="service@jwdata.com" />

        </RelativeLayout>

        <View style="@style/split_line_style_withMargin" />

        <!--产品官网-->
        <RelativeLayout
            android:id="@+id/offical"
            style="@style/item_layout_style">

            <TextView
                style="@style/textInMyFragmentLeft"
                android:text="产品官网" />

            <TextView
                style="@style/textInMyFragmentLeft"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:text="@string/offical_url" />

        </RelativeLayout>

        <View style="@style/split_line_style_withMargin" />

        <!--服务协议-->
        <RelativeLayout
            android:id="@+id/agreement"
            style="@style/item_layout_style">

            <TextView
                style="@style/textInMyFragmentLeft"
                android:text="服务协议" />

            <TextView
                style="@style/textInMyFragmentLeft"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                />

        </RelativeLayout>

        <View style="@style/split_line_style_withMargin" />

        <!--检查更新-->
        <RelativeLayout
            android:id="@+id/layout_version"
            style="@style/item_layout_style">

            <TextView
                style="@style/textInMyFragmentLeft"
                android:text="检查更新" />

            <TextView
                android:id="@+id/tv_update"
                style="@style/textInMyFragmentLeft"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/text_gray_h1" />

        </RelativeLayout>

        <View style="@style/split_line_style_withMargin" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                android:text="Copyright©2014-2017 Bronze." />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>