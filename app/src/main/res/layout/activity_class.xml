<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/class_activity_top"
        layout="@layout/class_commen_top" />

    <include layout="@layout/activity_topview_shadow" />

    <android.support.v4.view.ViewPager
        android:id="@+id/class_activity_viewPager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/class_activity_top"
        android:background="@color/white" />

    <TextView
        android:visibility="gone"
        android:layout_marginBottom="@dimen/dp20"
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_join"
        style="@style/long_blue_button"
        android:text="申请加入"/>
</RelativeLayout>