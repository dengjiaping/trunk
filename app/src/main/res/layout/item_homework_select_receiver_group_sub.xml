<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_receive_select_class_sub_group_check"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="@dimen/dp16">

            <com.histudent.jwsoft.histudent.commen.view.IconView
                android:id="@+id/iv_receive_select_class_sub_group_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp47"
                android:text="@string/icon_check2"
                android:textColor="@color/_cccccc"
                android:textSize="@dimen/sp18"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_receive_class_sub_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="作业A组"
            android:textColor="@color/_333333"
            android:textSize="@dimen/sp15"/>

        <LinearLayout
            android:id="@+id/ll_receive_class_look_group_detail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_receive_class_sub_group_member_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8人"
                android:textColor="@color/_bbbbbb"
                android:textSize="@dimen/sp13"/>

            <com.histudent.jwsoft.histudent.commen.view.IconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginRight="@dimen/dp12"
                android:text="@string/icon_arrowright"
                android:textColor="@color/_cccccc"
                android:textSize="@dimen/sp18"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view_create_group_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/_EEEEEE"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/ll_create_divide_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <com.histudent.jwsoft.histudent.commen.view.IconView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/icon_add"
            android:textColor="@color/_28ca7e"
            android:textSize="@dimen/sp15"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp3"
            android:text="创建分组"
            android:textColor="@color/_28ca7e"
            android:textSize="@dimen/sp15"/>
    </LinearLayout>


</LinearLayout>