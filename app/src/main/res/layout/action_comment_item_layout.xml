<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_to_name"
        style="@style/IntroductionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/itemMargin"
        android:layout_marginEnd="@dimen/itemMargin"
        android:background="@color/bg_color"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="5dp"
        android:text="111"
        android:textColor="@color/text_gray_h2"
        android:textSize="@dimen/small_textSize" />

    <TextView
        android:id="@+id/tv_comment"
        style="@style/IntroductionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/itemMargin"
        android:layout_marginEnd="@dimen/itemMargin"
        android:layout_marginTop="@dimen/dp10"
        android:text="222"
        android:textColor="@color/text_black_h1"
        android:textSize="@dimen/small_textSize" />

</LinearLayout>