<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.histudent.jwsoft.histudent.widget.ImageViewPager
        android:id="@+id/image_show_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.histudent.jwsoft.histudent.widget.ImageViewPager>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>
    <TextView
        android:id="@+id/image_show_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/_E4E4E4"
        android:layout_marginTop="48dp"
        android:text="1/2"/>

    <LinearLayout
        android:id="@+id/cb_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal">

        <com.histudent.jwsoft.histudent.commen.view.IconView
            android:id="@+id/cb_favor_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/icon_zannone"
            android:textColor="@color/text_white"
            android:onClick="true"
            android:padding="4dp"
            android:textSize="@dimen/text_size_15"/>


        <TextView
            android:id="@+id/cb_favor_text"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_marginStart="@dimen/dp5"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/text_black_h2"
            android:textSize="@dimen/small_textSize"/>

        <com.histudent.jwsoft.histudent.commen.view.IconView
            android:id="@+id/rb_comment_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:text="@string/icon_topic4"
            android:onClick="true"
            android:padding="4dp"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_15"/>
    </LinearLayout>

</FrameLayout>