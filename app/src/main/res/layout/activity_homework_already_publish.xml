<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_EFF0F2"
    android:orientation="vertical">

    <include layout="@layout/common_top_layout"/>


    <android.support.design.widget.TabLayout
        android:id="@+id/tl_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:background="@color/white"
        app:tabIndicatorColor="@color/_28ca7e"
        app:tabSelectedTextColor="@color/_333333"
        app:tabTextColor="@color/_bbbbbb"/>

    <View
        android:id="@+id/view_teacher_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/_EEEEEE"/>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/srl_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_homework"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


</LinearLayout>