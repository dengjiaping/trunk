<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/line_color_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/class_center_log_image"
            android:text="公开-03月5日 11:06"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/delet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:drawableLeft="@mipmap/see_nums"
            android:drawablePadding="5dp"
            android:onClick="onClick"
            android:src="@mipmap/delet" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color_gray" />

    <!--图片内容内容-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="最美是生活，留住信仰。"
            android:textColor="@color/text_black_h1"
            android:textSize="18sp" />

        <GridView
            android:id="@+id/gridview"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:numColumns="3">

        </GridView>

        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@mipmap/location"
            android:drawablePadding="10dp"
            android:text="杭州市西湖区彩华国际" />


    </LinearLayout>

    <!--底部栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <CheckBox
                android:id="@+id/item_like"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableLeft="@drawable/checkbox_like_bg"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="40dp"
                android:text="96"
                android:textSize="16sp" />

            <TextView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/line_color_gray" />

            <Button
                android:id="@+id/item_comment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@mipmap/discuss"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="40dp"
                android:text="96"
                android:textSize="16sp" />

            <TextView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/line_color_gray" />

            <Button
                android:id="@+id/item_share"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@mipmap/share"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="40dp"
                android:text="96"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color_gray" />

    </LinearLayout>

    <GridView
        android:id="@+id/grid_view_like"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:horizontalSpacing="4dp"
        android:numColumns="8"
        android:padding="10dp" />

</LinearLayout>