<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="请选择身份"
            android:textColor="@color/text_black_h1"
            android:textSize="@dimen/textSize" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/info"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/student_radioButton"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/regist_student_radio_bg"
                android:button="@null"
                android:checked="true" />

            <RadioButton
                android:id="@+id/teacher_radioButton"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/regist_teacher_radio_bg"
                android:button="@null" />

        </RadioGroup>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical">

        <Button
            android:id="@+id/regist_thefirst_fragment_nextbutton"
            style="@style/long_blue_button"
            android:layout_marginTop="@dimen/dp20"
            android:text="@string/next" />

    </LinearLayout>
</LinearLayout>
