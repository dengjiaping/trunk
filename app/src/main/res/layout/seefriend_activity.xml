<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/thetopview"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_color"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <com.histudent.jwsoft.histudent.commen.view.EditText_clear
            android:id="@+id/seefriend_edit"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/search_bar_edit_selector"
            android:drawableLeft="@mipmap/gd_reseach"
            android:drawablePadding="5dp"
            android:hint="请输入真实姓名/手机号"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:maxLines="1"
            android:textColorHint="@color/text_gray_h1"
            android:textSize="@dimen/small_textSize" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg_color"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="好友推荐"
        android:textColor="@color/text_black_h2"
        android:textSize="@dimen/textSize" />

    <ListView
        android:id="@+id/see_friend_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/line_color"
        android:dividerHeight="0.5dp" />

</LinearLayout>