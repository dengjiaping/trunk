<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/thetopview" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/ItemHeight"
        android:background="@color/bg_color"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="谁能访问我的主页："
        android:textColor="@color/text_black_h2"
        android:textSize="@dimen/textSize" />

    <RelativeLayout
        android:id="@+id/relative_all"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ItemHeight"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="所有人"
            android:textColor="@color/text_black_h1" />

        <ImageView
            android:id="@+id/cb_all"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/check_box_pading_size"
            android:src="@drawable/check_selector" />
    </RelativeLayout>

    <View style="@style/split_line_style_withMargin" />

    <RelativeLayout
        android:id="@+id/relative_classmate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ItemHeight"
        android:background="@color/white">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="校友同学"
            android:textColor="@color/text_black_h1" />

        <ImageView
            android:id="@+id/cb_classmate"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/check_box_pading_size"
            android:src="@drawable/check_selector" />
    </RelativeLayout>

    <View style="@style/split_line_style_withMargin" />

    <RelativeLayout
        android:id="@+id/relative_myself"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ItemHeight"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="仅自己"
            android:textColor="@color/text_black_h1" />

        <ImageView
            android:id="@+id/cb_myself"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/check_box_pading_size"
            android:src="@drawable/check_selector" />
    </RelativeLayout>

    <View style="@style/split_line_style_withMargin" />

    <RelativeLayout
        android:id="@+id/relative_defined"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ItemHeight"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="自定义"
            android:textColor="@color/text_black_h1" />

        <ImageView
            android:id="@+id/cb_defined"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:padding="@dimen/check_box_pading_size"
            android:src="@drawable/check_selector"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>


    <View style="@style/split_line_style_withMargin" />

    <RelativeLayout
        android:id="@+id/relative_disableduser"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ItemHeight"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="屏蔽用户"
            android:textColor="@color/text_black_h1" />

        <ImageView
            android:id="@+id/iv_disable"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3dp"
            android:paddingRight="@dimen/itemMargin"
            android:src="@mipmap/mine_more_right" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color" />
</LinearLayout>
