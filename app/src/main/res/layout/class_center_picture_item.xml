<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/view_album_line1"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginBottom="@dimen/dp2"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginTop="@dimen/dp2"
        android:background="@color/_cccccc"/>

    <View
        android:id="@+id/view_album_line2"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginBottom="@dimen/dp2"
        android:layout_marginLeft="@dimen/dp5"
        android:layout_marginRight="@dimen/dp5"
        android:background="@color/_cccccc"/>

    <LinearLayout
        android:id="@+id/layout_r"
        android:layout_width="200dp"
        android:layout_height="240dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_color"
            android:scaleType="centerCrop"
            android:src="@drawable/default_placeholder_style_1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_l"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp5">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/text_black_h2"
            android:textSize="@dimen/small_textSize"/>

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/text_gray_h2"
            android:textSize="@dimen/small_textSize"/>

    </LinearLayout>

</LinearLayout>