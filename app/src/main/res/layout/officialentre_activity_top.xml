<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/text_black_h3"
        android:scaleType="centerCrop" />

    <com.histudent.jwsoft.histudent.commen.view.HiStudentHeadImageView
        android:id="@+id/officialentre_activity_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="190dp" />

    <TextView
        android:id="@+id/officialentre_activity_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="195dp"
        android:layout_toRightOf="@id/officialentre_activity_image"
        android:text="系统通知"
        android:textColor="@color/text_white"
        android:textSize="@dimen/textSize"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/officialentre_activity_isflag"
        android:layout_width="50dp"
        android:layout_height="23dp"
        android:layout_below="@id/officialentre_activity_image"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/gray_button_bg"
        android:gravity="center"
        android:text="已关注"
        android:textColor="@color/text_white"
        android:textSize="@dimen/tiny_textSize" />

    <LinearLayout
        android:id="@+id/officialentre_activity_lefttext"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@id/bg"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/green_button_bg_stroke_offical"
        android:gravity="center_vertical"
        android:minWidth="40dp"
        android:orientation="horizontal">

        <com.histudent.jwsoft.histudent.commen.view.IconView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text="@string/icon_mine"
            android:textColor="@color/green_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/persion_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="0"
            android:textColor="@color/green_color"
            android:textSize="@dimen/small_textSize" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/officialentre_activity_righttext"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@id/bg"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/officialentre_activity_lefttext"
        android:background="@drawable/green_button_bg_stroke_offical"
        android:gravity="center_vertical"
        android:minWidth="40dp"
        android:orientation="horizontal">

        <com.histudent.jwsoft.histudent.commen.view.IconView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text="@string/icon_news"
            android:textColor="@color/green_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pe_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="0"
            android:textColor="@color/green_color"
            android:textSize="@dimen/small_textSize" />

    </LinearLayout>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/officialentre_activity_lefttext"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/text_gray_h2"
        android:textSize="@dimen/small_textSize" />

    <TextView
        style="@style/split_line_style_10dp"
        android:layout_below="@id/text"
        android:layout_marginTop="@dimen/dp10" />

</RelativeLayout>
