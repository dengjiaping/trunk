<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/margin_long"
    android:layout_marginRight="@dimen/margin_long"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="90dp">

            <ImageView
                android:id="@+id/item_leftimage"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:src="@mipmap/per_def" />

            <TextView
                android:id="@+id/item_redpoint"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/text_white"
                android:gravity="center"
                android:background="@drawable/red_point" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/item_top_left_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:text="官方活动"
                android:textColor="@color/text_black_h1"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/item_top_right_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_long"
                android:gravity="bottom"
                android:text="11:30"
                android:textColor="@color/text_gray_h2"
                android:textSize="16sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/item_bottom_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:text="三月植树月，植树小明星活动启动！"
            android:textColor="@color/text_gray_h2"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>