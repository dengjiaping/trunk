<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_add_friends_to_class"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include layout="@layout/thetopview"></include>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:background="@color/bg_color"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp20"
        android:paddingStart="@dimen/dp20"
        android:text="成员身份"
        android:textColor="@color/text_black_h1"/>


    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dp10">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="@dimen/dp60"
            android:layout_height="@dimen/dp60"
            android:layout_marginEnd="@dimen/dp40"
            android:layout_marginRight="@dimen/dp40"
            android:background="@drawable/regist_student_radio_bg"
            android:button="@null"
            android:checked="true"
            android:gravity="center_vertical"/>

        <RadioButton
            android:layout_width="@dimen/dp60"
            android:layout_height="@dimen/dp60"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginStart="@dimen/dp20"
            android:background="@drawable/regist_teacher_radio_bg"
            android:button="@null"
            android:checked="false"
            android:gravity="center_vertical"/>
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_marginStart="@dimen/dp20"
        android:background="@color/bg_color"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp20"
        android:text="成员姓名"
        android:textColor="@color/text_black_h1"/>

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:background="@color/white"
        android:hint="请输入真实姓名"
        android:paddingLeft="@dimen/dp20"
        android:paddingStart="@dimen/dp20"
        android:textColorHint="@color/text_gray_h2"
        android:textSize="@dimen/text_size_14"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:background="@color/bg_color"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp20"
        android:paddingStart="@dimen/dp20"
        android:text="成员手机号"
        android:textColor="@color/text_black_h1"/>

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:background="@color/white"
        android:hint="请输入可用手机号"
        android:paddingLeft="@dimen/dp20"
        android:paddingStart="@dimen/dp20"
        android:textColorHint="@color/text_gray_h2"
        android:textSize="@dimen/text_size_14"/>

    <include layout="@layout/set_member_instr"></include>
</LinearLayout>
