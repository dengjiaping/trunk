<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/radio_group_"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:layout_marginRight="10dp">


        <ImageView
            android:id="@+id/body_pup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginTop="@dimen/dp15"
            android:src="@mipmap/body_pup" />

        <LinearLayout
            android:id="@+id/radio_group"
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/body_pup"
            android:background="#207ebd"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/radio_group_01"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/message_window_radio_bg"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="9dp"
                    android:src="@mipmap/addfriends" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="添加好友"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white"></View>

            <LinearLayout
                android:id="@+id/radio_group_02"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/message_window_radio_bg"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="9dp"
                    android:src="@mipmap/richscan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="扫一扫"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>