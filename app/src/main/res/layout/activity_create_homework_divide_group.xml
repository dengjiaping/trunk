<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_EFF0F2"
    android:orientation="vertical">

    <include layout="@layout/thetopview_new"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp40"
        android:layout_marginLeft="@dimen/dp12"
        android:gravity="center_vertical"
        android:text="分组名称"
        android:textColor="@color/_333333"
        android:textSize="@dimen/sp14"/>


    <EditText
        android:id="@+id/et_input_divide_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:background="@android:color/white"
        android:hint="请输入分组名称"
        android:maxLength="15"
        android:paddingLeft="@dimen/dp12"
        android:textColorHint="@color/_bbbbbb"
        android:textCursorDrawable="@drawable/edit_text_cursor_drawable_shape"
        android:textSize="@dimen/sp15"/>

    <TextView
        android:id="@+id/tv_divide_group_member_count"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp40"
        android:layout_marginLeft="@dimen/dp12"
        android:gravity="center_vertical"
        android:text="分组成员"
        android:textColor="@color/_333333"
        android:textSize="@dimen/sp14"/>

    <include layout="@layout/item_homework_add_action"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_divide_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>