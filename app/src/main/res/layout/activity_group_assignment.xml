<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/thetopview_new" />


    <TextView
        android:id="@+id/assignment_edit"
        style="@style/text_gray_v2"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/gray_button_bg_"
        android:clickable="true"
        android:hint="选择获得转让的社群成员"
        android:onClick="onClick"
        android:paddingLeft="10dp"
        android:textColorHint="@color/text_gray_h1"
        android:textSize="@dimen/textSize" />

    <TextView
        android:id="@+id/assignment_button"
        style="@style/text_white_v2"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/green_button_bg_"
        android:gravity="center"
        android:onClick="onClick"
        android:text="确定转让"
        android:textSize="@dimen/large_textSize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.histudent.jwsoft.histudent.commen.view.IconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/dp5"
                android:text="@string/icon_tip2"
                android:textColor="@color/icon_color"
                android:textSize="@dimen/text_size_14" />

            <TextView
                style="@style/text_back_v2_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="什么情况下需要转让社群？"
                android:textSize="@dimen/text_size_13" />
        </LinearLayout>
        <TextView
            style="@style/IntroductionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="1、社群的管理员需要进行变更时，需要把社群最高管理权限转让给其它用户。"
            android:textColor="@color/text_gray_h1"
            android:textSize="@dimen/text_size_12" />

        <TextView
            style="@style/IntroductionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp7"
            android:text="2、社群需继续正常维系，群主由于特殊原因需要退出社群。"
            android:textColor="@color/text_gray_h1"
            android:textSize="@dimen/text_size_12" />

    </LinearLayout>

</LinearLayout>