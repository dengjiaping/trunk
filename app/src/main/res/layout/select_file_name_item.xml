<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="104dp"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="103.5dp">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/def_no_picture"/>

        <TextView
            android:paddingRight="@dimen/dp50"
            android:id="@+id/tv_photo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv"
            android:paddingLeft="10dp"
            android:text="相册名称"
            android:textColor="@color/text_black_h1"
            android:textSize="@dimen/textSize"/>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_photo_name"
            android:layout_marginBottom="@dimen/dp25"
            android:layout_toRightOf="@id/iv"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="张数"
                android:textColor="@color/text_gray_h2"
                android:textSize="@dimen/text_size_13"/>

            <TextView
                android:id="@+id/line"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text=" — "
                android:textColor="@color/text_gray_h2"
                android:textSize="@dimen/text_size_13"/>

            <TextView
                android:id="@+id/tv_authority"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="公开 "
                android:textColor="@color/text_gray_h2"
                android:textSize="@dimen/text_size_13"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="20dp"
            android:src="@mipmap/more"/>
    </RelativeLayout>

    <View style="@style/split_line_style_withMargin"></View>
</LinearLayout>