<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3">

        <TextView
            style="@style/IntroductionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:text="班级logo象征着班级荣誉和团结，这是你的班级精神风貌的展示"
            android:textColor="@color/text_black_h1"
            android:textSize="@dimen/text_size_15" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">

        <RelativeLayout
            android:id="@+id/camera_layout"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true">

            <com.histudent.jwsoft.histudent.commen.view.IconView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/white_button_bg_circle"
                android:gravity="center"
                android:text="@string/icon_camera"
                android:textColor="@color/bg_color"
                android:textSize="35sp" />

            <com.histudent.jwsoft.histudent.commen.view.HiStudentHeadImageView
                android:id="@+id/camera"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center" />

        </RelativeLayout>

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/camera_layout"
            android:gravity="bottom|center_horizontal"
            android:text="没有班级logo，你也可以选择集体照。"
            android:textColor="@color/text_gray_h2"
            android:textSize="@dimen/text_size_13" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2" />

    <!--<TextView-->
    <!--android:id="@+id/gonext"-->
    <!--style="@style/long_green_button"-->
    <!--android:layout_marginBottom="30dp"-->
    <!--android:text="下一步" />-->

    <TextView
        android:id="@+id/gonext"
        style="@style/long_gray_button"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="@dimen/itemMargin"
        android:layout_marginRight="@dimen/itemMargin"
        android:layout_marginTop="@dimen/dp36"
        android:background="@drawable/green_button_bg"
        android:clickable="false"
        android:text="下一步" />

</LinearLayout>