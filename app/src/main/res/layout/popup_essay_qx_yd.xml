<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray_alpha40"
    android:orientation="vertical">

    <include
        layout="@layout/thetopview_yd"
        android:visibility="gone" />

    <RelativeLayout
        style="@style/topView_style_00"
        android:layout_width="match_parent">

        <ImageView
            android:id="@+id/tip_image_yd"
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@mipmap/essay_share_yd" />

        <ImageView
            android:id="@+id/tip_image_know"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:layout_below="@id/tip_image_yd"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@mipmap/know_yd" />

        <ImageView
            android:id="@+id/the_top_yd"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="45dp"
            android:scaleType="fitXY"
            android:src="@mipmap/right_bottom_yd" />

    </RelativeLayout>

    <!--权限-->
    <RelativeLayout
        android:id="@+id/relative_photo_quality"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <RadioButton
            android:id="@+id/rb_authority"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/itemMargin"
            android:button="@null"
            android:drawableLeft="@mipmap/authority"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:text="权限"
            android:textColor="@color/text_gray_h2"
            android:textSize="@dimen/textSize" />

        <ImageView
            android:id="@+id/iv_authority"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ImageNextSize"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/ImageNextPandingSizeVert"
            android:paddingLeft="@dimen/dp5"
            android:paddingRight="@dimen/ImageNextPandingSize"
            android:paddingTop="@dimen/ImageNextPandingSizeVert"
            android:src="@mipmap/mine_more_right" />

        <TextView
            android:id="@+id/tv_authority"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/iv_authority"
            android:gravity="center_vertical"
            android:text="公开"
            android:textColor="@color/text_black_h1"
            android:textSize="@dimen/textSize" />
    </RelativeLayout>

</LinearLayout>