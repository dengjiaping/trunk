<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemHight"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp25"
        android:paddingRight="@dimen/dp25">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="原密码"
            android:textColor="@color/text_black_h1"
            android:textSize="@dimen/textSize" />

        <EditText
            android:id="@+id/accountSafe_pswSet_fragment_01_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/itemMargin"
            android:background="@null"
            android:hint="请输入修改前的密码"
            android:textColorHint="@color/text_gray_h1"
            android:textSize="@dimen/textSize" />

    </LinearLayout>

    <View style="@style/split_line_style_withMargin" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/itemMargin"
        android:layout_marginRight="@dimen/itemMargin"
        android:layout_marginTop="@dimen/itemMargin"
        android:textColor="@color/text_gray_h2"
        android:text="@string/accountSafeTip_00"
        android:textSize="@dimen/small_textSize" />

    <TextView
        android:id="@+id/accountSafe_pswSet_fragment_01_next"
        style="@style/long_blue_button"
        android:layout_marginTop="@dimen/dp15"
        android:text="验证" />

</LinearLayout>