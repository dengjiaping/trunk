<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/update" />

    <ImageView
        android:id="@+id/iv_cancel"

        android:layout_width="@dimen/dp40"
        android:layout_height="@dimen/dp40"
        android:layout_alignEnd="@id/iv_update"
        android:layout_marginRight="@dimen/dp30"
        android:layout_marginTop="45dp"
        android:padding="@dimen/dp10"
        android:src="@mipmap/delete_"
        android:layout_alignRight="@id/iv_update"/>

    <TextView
        android:id="@+id/tv_update"
        style="@style/IntroductionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_update"
        android:layout_marginLeft="@dimen/dp32"
        android:layout_marginRight="@dimen/dp32"
        android:background="@color/white"
        android:paddingBottom="@dimen/dp20"
        android:paddingLeft="@dimen/dp20"
        android:paddingRight="@dimen/dp20"
        android:paddingTop="@dimen/dp40"
        android:textColor="@color/black_gray"
        android:textSize="@dimen/sp15" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp70"
        android:layout_below="@id/tv_update"
        android:layout_marginLeft="@dimen/dp32"
        android:layout_marginRight="@dimen/dp32"
        android:background="@drawable/btn_down_round2_bg">

        <Button
            android:id="@+id/upldate_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp20"

            android:layout_marginRight="@dimen/dp20"
            android:layout_marginTop="@dimen/dp10"
            android:background="@drawable/blue_button_bg"
            android:text="立即升级"
            android:textColor="@color/white" />
    </RelativeLayout>


</RelativeLayout>