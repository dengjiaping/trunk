<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@android:color/white"
    android:gravity="center_vertical">


    <ImageView
        android:id="@+id/iv_homeWork_type_icon"
        android:layout_width="@dimen/dp60"
        android:layout_height="@dimen/dp60"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp12"
        android:gravity="center"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp14"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp12"
        android:layout_marginTop="@dimen/dp14"
        android:layout_toRightOf="@id/iv_homeWork_type_icon"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_homework_type"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_homework_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="英语作业"
                android:textColor="@color/_333333"
                android:textSize="@dimen/sp17"/>

            <LinearLayout
                android:id="@+id/ll_homework_type_group"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp23"
                android:orientation="horizontal"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_homework_voice_picture_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_homework_content_detail_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:maxEms="12"
                android:text="[语音]"
                android:textColor="@color/_888888"
                android:textSize="@dimen/sp15"/>

            <TextView
                android:id="@+id/ll_homework_picture_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:text="[图片]"
                android:textColor="@color/_888888"
                android:textSize="@dimen/sp15"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/ll_homework_content_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="很好的完成了老师所布置的作业"
                android:textColor="@color/_888888"
                android:textSize="@dimen/sp15"
                android:visibility="gone"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_homework_publish_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_publish_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布人: 超大风"
                android:textColor="@color/_bbbbbb"
                android:textSize="@dimen/sp14"/>

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/dp12"
        android:layout_marginRight="@dimen/dp12"
        android:layout_marginTop="@dimen/dp15"
        android:background="@drawable/homework_group_shape_red"
        android:text="未完成"
        android:textColor="@color/_FF5858"
        android:textSize="@dimen/sp11"/>


</RelativeLayout>