<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/thetopview_new" />



    <EditText
        android:id="@+id/assignment_edit"
        style="@style/text_gray_v2"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/gray_button_bg_"
        android:hint="转入老师的手机号"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:textColorHint="@color/text_gray_h1"
        android:textSize="@dimen/textSize" />

    <TextView
        android:id="@+id/assignment_button"
        style="@style/text_white_v2"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/green_button_bg_"
        android:gravity="center"
        android:onClick="onClick"
        android:text="确定转让"
        android:textSize="@dimen/large_textSize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.histudent.jwsoft.histudent.commen.view.IconView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:paddingRight="@dimen/dp5"
                android:paddingEnd="@dimen/dp5"
                android:text="@string/icon_why"
                android:textColor="@color/icon_color"
                android:textSize="@dimen/text_size_14" />

            <TextView
                style="@style/text_back_v2_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="什么情况下需要转让班级？"
                android:textSize="@dimen/text_size_13" />
        </LinearLayout>

        <TextView
            style="@style/IntroductionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="1、当班级被错误创建被占用时，需要把班级最高管理身份转让给其他老师。" />

        <TextView
            style="@style/IntroductionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp7"
            android:text="2、当学校的行政班级任命发生变更时，需要把班级转让给新任命的班主任老师。" />

    </LinearLayout>

</LinearLayout>