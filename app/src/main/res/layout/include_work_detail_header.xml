<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal"
    android:background="@color/white"
    android:paddingLeft="@dimen/itemMargin"
    android:paddingRight="@dimen/itemMargin"
    android:gravity="center_vertical"
    >


    <ImageView
        android:id="@+id/work_detail_img"
        android:layout_width="60dp"
        android:layout_height="60dp" />
    
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="16dp">

        <TextView
            android:id="@+id/work_detail_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="数学作业"
            android:textSize="17sp"
            android:textColor="@color/text_black_h2"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            >

            <TextView
                android:id="@+id/work_detail_create_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="李丽丽"
                android:textSize="14sp"
                android:textColor="@color/text_gray_h1"
                />

            <TextView
                android:id="@+id/work_detail_create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:58"
                android:textSize="12sp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/text_gray_h1"
                />

        </LinearLayout>



    </LinearLayout>






</LinearLayout>