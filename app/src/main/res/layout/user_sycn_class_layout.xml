<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_sycn_class_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/sycn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:onClick="onClick"
        android:paddingLeft="@dimen/dp15">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <com.histudent.jwsoft.histudent.commen.view.IconView
                android:id="@+id/sycn_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/icon_people"
                android:textColor="@color/icon_color"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp10"
                android:text="同步班级"
                android:textColor="@color/text_black_h1"
                android:textSize="@dimen/textSize" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_address"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ImageNextSize"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:paddingRight="@dimen/itemMargin"
            android:src="@mipmap/mine_more_right"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <com.histudent.jwsoft.histudent.commen.view.MyGridView
        android:id="@+id/gridview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:horizontalSpacing="5dp"
        android:numColumns="3"
        android:paddingLeft="@dimen/dp40"
        android:paddingRight="@dimen/dp15"
        android:verticalSpacing="@dimen/dp5">

    </com.histudent.jwsoft.histudent.commen.view.MyGridView>

</LinearLayout>