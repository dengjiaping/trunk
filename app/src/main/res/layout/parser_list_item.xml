<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parser_layout"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/white"
    android:paddingLeft="@dimen/itemMargin"
    android:paddingRight="@dimen/itemMargin">


    <com.histudent.jwsoft.histudent.commen.view.HiStudentHeadImageView
        android:id="@+id/parser_list_item_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/offical_action" />


    <TextView
        android:id="@+id/parser_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/parser_list_item_head"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:text="王伟"
        android:textColor="@color/text_black_h3"
        android:textSize="@dimen/textSize" />

    <TextView
        android:id="@+id/parser_list_item_time"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="2016-8-30 22:30"
        android:textColor="@color/text_gray_h2"
        android:textSize="@dimen/tiny_textSize" />

</RelativeLayout>