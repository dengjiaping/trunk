<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:paddingLeft="@dimen/itemMargin"
        android:paddingRight="@dimen/itemMargin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="分享至"
            android:textColor="@color/text_black_h1"
            android:textSize="@dimen/textSize" />

        <ImageView
            android:id="@+id/share_weixin"
            android:layout_width="@dimen/dp60"
            android:layout_height="@dimen/dp60"
            android:padding="8dp"
            android:src="@mipmap/weixin" />

        <ImageView
            android:id="@+id/share_weixin_circle"
            android:layout_width="@dimen/dp60"
            android:layout_height="@dimen/dp60"
            android:padding="8dp"
            android:src="@mipmap/weixin_circle" />

        <ImageView
            android:id="@+id/qq_circle"
            android:layout_width="@dimen/dp60"
            android:layout_height="@dimen/dp60"
            android:padding="8dp"
            android:src="@mipmap/qq_circle" />

    </LinearLayout>

</RelativeLayout>