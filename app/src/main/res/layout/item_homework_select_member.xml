<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_select_head_icon"
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp50"
        android:layout_marginLeft="@dimen/dp12"/>

    <TextView
        android:id="@+id/tv_select_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_weight="1"
        android:text="会飞的鱼"
        android:textColor="@color/_333333"
        android:textSize="@dimen/sp15"/>

    <LinearLayout
        android:id="@+id/ll_add_member_search_select"
        android:layout_width="@dimen/dp60"
        android:layout_height="match_parent"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">

        <com.histudent.jwsoft.histudent.commen.view.IconView
            android:id="@+id/iv_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp12"
            android:text="@string/icon_check2"
            android:textColor="@color/_cccccc"
            android:textSize="@dimen/sp18"/>

    </LinearLayout>

</LinearLayout>