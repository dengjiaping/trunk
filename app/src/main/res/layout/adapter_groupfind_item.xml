<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/itemMargin"
            android:text="创客"
            android:textColor="@color/text_black_h1"
            android:textSize="@dimen/textSize" />

        <com.histudent.jwsoft.histudent.commen.view.IconView
            android:id="@+id/go_more"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            style="@style/icon_arrowright_style" />

    </RelativeLayout>

    <View style="@style/split_line_style" />

    <com.histudent.jwsoft.histudent.commen.view.MyListView2
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/itemMargin"
        android:divider="@color/line_color"
        android:dividerHeight="0.5dp" />

</LinearLayout>