<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/thetopview"
    style="@style/topView_frist_style"
    android:layout_width="match_parent">

    <!-- 标题栏左边的文本或者图片空间 -->
    <RelativeLayout
        android:id="@+id/title_left"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:paddingLeft="15dp">

        <ImageView
            android:id="@+id/title_left_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical|left"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/title_left_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/title_left_image"
            android:gravity="center"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_16" />

    </RelativeLayout>

    <!-- 标题栏右边的文本或者图片空间 -->
    <RelativeLayout
        android:id="@+id/title_right"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:paddingRight="@dimen/itemMargin">

        <ImageView
            android:id="@+id/title_right_image"
            android:layout_width="15dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical|right"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/title_right_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/title_right_image"
            android:gravity="center"
            android:textColor="@color/text_white"
            android:textSize="@dimen/textSize"
            android:textStyle="bold" />


    </RelativeLayout>

    <!-- 标题栏中间的文本 -->
    <LinearLayout
        android:id="@+id/title_middle"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_middle_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/text_white"
            android:textSize="@dimen/large_textSize"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/title_middle_image"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginLeft="5dp"
            android:visibility="gone" />

        <!--<TextView-->
        <!--android:id="@+id/title_middle_text_"-->
        <!--android:layout_width="18dp"-->
        <!--android:layout_height="18dp"-->
        <!--android:layout_marginLeft="5dp"-->
        <!--android:background="@drawable/circle_white_gb"-->
        <!--android:gravity="center"-->
        <!--android:textColor="@color/button_top_blue"-->
        <!--android:textSize="@dimen/large_textSize"-->
        <!--android:visibility="gone" />-->
    </LinearLayout>

</RelativeLayout>