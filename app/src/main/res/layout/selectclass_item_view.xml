<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:background="@color/white"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/selecteclass_item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/itemMargin"
        android:paddingRight="@dimen/itemMargin"
    >

        <com.histudent.jwsoft.histudent.commen.view.HiStudentHeadImageView

            android:id="@+id/iv_person"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp10"
            android:src="@mipmap/default_class1"/>
        <LinearLayout android:id="@+id/content"
                      android:layout_width="wrap_content"
                      android:layout_height="79dp"
                      android:layout_marginRight="@dimen/dp5"
                      android:layout_toRightOf="@id/iv_person"
                      android:orientation="vertical"
                      android:paddingBottom="@dimen/dp10"
                      android:paddingTop="@dimen/dp10">
            <TextView
                android:id="@+id/selecteclass_item_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="middle"
                android:gravity="center_vertical"
                android:maxEms="10"
                android:maxLines="1"
                android:textColor="@color/text_black_h1"
                android:textSize="@dimen/textSize"/>

            <TextView
                android:id="@+id/selecteclass_item_member_count"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="2010级2班"
                android:textColor="@color/text_gray_h2"
                android:textSize="@dimen/text_size_13"/>
        </LinearLayout>

        <TextView android:id="@+id/tv_default"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/dp15"
                  android:layout_toRightOf="@id/content"
                  android:background="@drawable/sycn_class_bg"
                  android:gravity="center"
                  android:paddingBottom="@dimen/dp2"
                  android:paddingLeft="@dimen/dp5"
                  android:paddingRight="@dimen/dp5"
                  android:paddingTop="@dimen/dp2"
                  android:text="默认班级"
                  android:textColor="@color/green_color"
                  android:textSize="@dimen/text_size_10"
        />

        <com.histudent.jwsoft.histudent.commen.view.swipemenulistview.CheckBoxView
            android:id="@+id/selecteclass_item_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="@string/icon_check"
            android:textSize="@dimen/text_size_18"
        />

    </RelativeLayout>

    <View style="@style/split_line_style_withLeftMargin" android:layout_alignParentBottom="true"/>

</RelativeLayout>